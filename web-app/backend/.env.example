# ====================================
# MarkItDown Web App 環境変数設定
# ====================================
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# -------------------------------------
# API設定
# -------------------------------------

# OpenAI API設定 (AI変換モード用)
# OpenAI APIキーを設定すると、AI変換モードで高度な画像解析が利用可能になります
# https://platform.openai.com/api-keys から取得
OPENAI_API_KEY=

# OpenAI モデル設定 (デフォルト: gpt-4o-mini)
# 利用可能なモデル: gpt-4o-mini, gpt-4o, gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini

# -------------------------------------
# アプリケーション設定
# -------------------------------------

# アプリケーション環境
# development, staging, production
APP_ENV=development

# APIサーバー設定
API_HOST=0.0.0.0
API_PORT=8000

# フロントエンドURL (CORS設定用)
# 開発環境: http://localhost:3000
# 本番環境: https://your-vercel-app.vercel.app
FRONTEND_URL=http://localhost:3000

# -------------------------------------
# ファイル処理設定
# -------------------------------------

# アップロードファイルの最大サイズ (MB)
MAX_FILE_SIZE_MB=10

# 同時処理可能なファイル数
MAX_BATCH_SIZE=10

# 変換タイムアウト (秒)
CONVERSION_TIMEOUT=300

# -------------------------------------
# ストレージ設定
# -------------------------------------

# ファイル保存ディレクトリ
UPLOAD_DIR=./uploads
OUTPUT_DIR=./converted

# ファイル保持期間 (時間)
FILE_RETENTION_HOURS=24

# -------------------------------------
# データベース設定 (将来の拡張用)
# -------------------------------------

# Firebase設定 (オプション)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# PostgreSQL設定 (オプション)
DATABASE_URL=

# -------------------------------------
# セキュリティ設定
# -------------------------------------

# APIキー (管理API用)
API_SECRET_KEY=

# CORS許可オリジン (カンマ区切り)
# 開発環境: http://localhost:3000
# 本番環境: https://your-vercel-app.vercel.app または https://*.vercel.app
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# -------------------------------------
# OCR設定
# -------------------------------------

# OCR言語設定
# 利用可能: en, japan, ch, korean
OCR_LANGUAGES=en,japan

# OCR信頼度閾値 (0.0-1.0)
OCR_CONFIDENCE_THRESHOLD=0.5

# -------------------------------------
# ログ設定
# -------------------------------------

# ログレベル
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ログファイル保存先
LOG_FILE=./logs/app.log

# -------------------------------------
# 機能フラグ
# -------------------------------------

# AI変換モードの有効化
ENABLE_AI_MODE=true

# バッチ処理の有効化
ENABLE_BATCH_PROCESSING=true

# YouTube URL変換の有効化
ENABLE_YOUTUBE_CONVERSION=true

# 画像OCRの有効化
ENABLE_OCR=true

# -------------------------------------
# パフォーマンス設定
# -------------------------------------

# ワーカー数
WORKERS=4

# スレッド数
THREADS=2

# キャッシュ有効化
ENABLE_CACHE=true

# キャッシュTTL (秒)
CACHE_TTL=3600

# -------------------------------------
# 通知設定 (オプション)
# -------------------------------------

# Slack Webhook URL (エラー通知用)
SLACK_WEBHOOK_URL=

# Email設定 (通知用)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# -------------------------------------
# 開発環境設定
# -------------------------------------

# デバッグモード
DEBUG=false

# ホットリロード
RELOAD=true

# モックサービスの使用
USE_MOCK_SERVICES=false

# -------------------------------------
# Docker設定 (Docker使用時)
# -------------------------------------

# Dockerコンテナ名
CONTAINER_NAME=markitdown-backend

# Docker内部ポート
INTERNAL_PORT=8000

# -------------------------------------
# その他の設定
# -------------------------------------

# タイムゾーン
TZ=Asia/Tokyo

# 言語設定
LANGUAGE=ja_JP.UTF-8