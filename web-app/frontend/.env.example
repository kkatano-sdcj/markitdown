# ====================================
# MarkItDown Frontend 環境変数設定
# ====================================
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# -------------------------------------
# API接続設定
# -------------------------------------

# バックエンドAPIのURL
REACT_APP_API_URL=http://localhost:8000

# WebSocket URL (リアルタイム通信用)
REACT_APP_WS_URL=ws://localhost:8000

# -------------------------------------
# アプリケーション設定
# -------------------------------------

# アプリケーション名
REACT_APP_NAME=MarkItDown Converter

# バージョン
REACT_APP_VERSION=1.0.0

# 環境
# development, staging, production
REACT_APP_ENV=development

# -------------------------------------
# 機能設定
# -------------------------------------

# AI変換モードの表示
REACT_APP_ENABLE_AI_MODE=true

# YouTube URL変換の表示
REACT_APP_ENABLE_YOUTUBE=true

# バッチ処理の有効化
REACT_APP_ENABLE_BATCH=true

# ドラッグ&ドロップの有効化
REACT_APP_ENABLE_DRAG_DROP=true

# -------------------------------------
# UI設定
# -------------------------------------

# テーマ (light, dark, auto)
REACT_APP_THEME=light

# 言語設定
REACT_APP_LANGUAGE=ja

# 最大アップロードファイル数
REACT_APP_MAX_FILES=10

# ファイルサイズ制限 (MB)
REACT_APP_MAX_FILE_SIZE_MB=10

# -------------------------------------
# 開発設定
# -------------------------------------

# デバッグモード
REACT_APP_DEBUG=false

# 開発者ツール表示
REACT_APP_SHOW_DEV_TOOLS=false

# モック データの使用
REACT_APP_USE_MOCK_DATA=false

# -------------------------------------
# Google Analytics (オプション)
# -------------------------------------

# Google Analytics測定ID
REACT_APP_GA_MEASUREMENT_ID=

# -------------------------------------
# Sentry (エラートラッキング, オプション)
# -------------------------------------

# Sentry DSN
REACT_APP_SENTRY_DSN=

# Sentry環境
REACT_APP_SENTRY_ENVIRONMENT=development

# -------------------------------------
# その他の設定
# -------------------------------------

# タイムアウト設定 (ミリ秒)
REACT_APP_API_TIMEOUT=30000

# リトライ回数
REACT_APP_API_RETRY_COUNT=3

# ポーリング間隔 (ミリ秒)
REACT_APP_POLLING_INTERVAL=5000